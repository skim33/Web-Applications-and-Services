<div class="row">     
    <div class="col-md-12">           
        <h2>Employees</h2>           
        <hr />

        <div class = "table-responsive">
            <table class = "table">
                <thead>
                    <tr>
                        <th>Department Number</th>
                        <th>Department Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each departments}}
                        <tr>
                            <td><a href="/employee?department={{departmentId}}">{{departmentId}}</a></td>
                            <td><a href="/employee?department={{departmentId}}">{{departmentName}}</a></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div